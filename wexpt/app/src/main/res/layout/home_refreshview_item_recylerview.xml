<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/commont_dp6">

    <ImageView
        android:id="@+id/itme_image"
        android:layout_width="@dimen/commont_dp40"
        android:layout_height="@dimen/commont_dp40"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_bag_image" />

    <TextView
        android:id="@+id/itme_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/commont_dp10"
        android:text="包包"
        android:textColor="@android:color/black"
        android:textSize="@dimen/commont_dp16" />

</LinearLayout>
